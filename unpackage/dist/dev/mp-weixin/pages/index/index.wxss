/* 3d旋转 */
.coin {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  margin: 100rpx auto;
  -webkit-transform-style: preserve-3d;
          transform-style: preserve-3d;
}
.coin-facade {
  -webkit-animation: flipFacade 1s ease-out forwards;
          animation: flipFacade 1s ease-out forwards;
}
.coin-reverse {
  -webkit-animation: flipReverse 1s ease-out forwards;
          animation: flipReverse 1s ease-out forwards;
}
.coin-front,
.coin-back {
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  overflow: hidden;
  -webkit-mask-image: -webkit-radial-gradient(white, black);
          mask-image: radial-gradient(white, black);
}
.coin-front:after,
  .coin-back:after {
    content: "";
    position: absolute;
    left: -200rpx;
    bottom: 100%;
    display: block;
    height: 266.66667rpx;
    width: 800rpx;
    background: #fff;
    opacity: 0.3;
    -webkit-animation: shine linear 0.5s infinite;
            animation: shine linear 0.5s infinite;
}
.coin-front {
  -webkit-transform: translateZ(16px);
          transform: translateZ(16px);
}
.coin-back {
  -webkit-transform: translateZ(0);
          transform: translateZ(0);
}
.coin-back .coin-img {
    -webkit-transform: rotateY(180deg);
            transform: rotateY(180deg);
}
.coin-middle {
  width: 400rpx;
  height: 400rpx;
  -webkit-transform: translateZ(1px);
          transform: translateZ(1px);
  position: absolute;
}
.coin-img {
  width: 400rpx;
  height: 400rpx;
}
.coin-shadow {
  position: absolute;
  width: 400rpx;
  height: 16px;
  border-radius: 50%;
  background: #000;
  box-shadow: 0 0 80px 80px #000;
  opacity: 0.125;
  -webkit-transform: rotateX(90deg) translateZ(-440rpx) scale(0.5);
          transform: rotateX(90deg) translateZ(-440rpx) scale(0.5);
}
.coin-result {
  font-size: 20px;
  margin-bottom: 40rpx;
}
.coin-record {
  text-align: center;
  color: #FFFFFF;
  font-size: 18px;
  margin-bottom: 60rpx;
}
@-webkit-keyframes flipFacade {
from {
    -webkit-transform: perspective(1000px) rotateY(0);
            transform: perspective(1000px) rotateY(0);
}
to {
    -webkit-transform: perspective(1000px) rotateY(1800deg);
            transform: perspective(1000px) rotateY(1800deg);
}
}
@-webkit-keyframes flipReverse {
from {
    -webkit-transform: perspective(1000px) rotateY(0);
            transform: perspective(1000px) rotateY(0);
}
to {
    -webkit-transform: perspective(1000px) rotateY(1980deg);
            transform: perspective(1000px) rotateY(1980deg);
}
}
@-webkit-keyframes shine {
0%,
  15% {
    -webkit-transform: translateY(800rpx) rotate(-40deg);
            transform: translateY(800rpx) rotate(-40deg);
}
50% {
    -webkit-transform: translateY(-400rpx) rotate(-40deg);
            transform: translateY(-400rpx) rotate(-40deg);
}
}
@keyframes shine {
0%,
  15% {
    -webkit-transform: translateY(800rpx) rotate(-40deg);
            transform: translateY(800rpx) rotate(-40deg);
}
50% {
    -webkit-transform: translateY(-400rpx) rotate(-40deg);
            transform: translateY(-400rpx) rotate(-40deg);
}
}

